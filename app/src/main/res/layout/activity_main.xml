<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentlayout"
        android:layout_width="413dp"
        android:layout_height="629dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toTopOf="@+id/user2button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

    <Button
        android:id="@+id/user1button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="12dp"
        android:text="@string/user1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user2button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user1fragment"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/user2button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="12dp"
        android:text="@string/user2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user1button"
        app:layout_constraintTop_toBottomOf="@+id/user1fragment"
        tools:ignore="UnknownId" />

</androidx.constraintlayout.widget.ConstraintLayout>